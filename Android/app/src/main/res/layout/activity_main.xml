<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
            android:id="@+id/logoLine"
            android:src="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="175dp"
    />
    <EditText
            android:id="@+id/edit1"
            android:hint="Nhập email hoặc sđt"
            android:gravity="center"
            android:layout_below="@id/logoLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <EditText
            android:id="@+id/edit2"
            android:hint="Nhập mật khẩu:"
            android:gravity="center"
            android:layout_below="@id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
    <Button
            android:id="@+id/button1"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/edit2"
            android:background="#55B475"
            android:text="Đăng nhập"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:textSize="22dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#81DD162D"
    />
    <LinearLayout
            android:id="@+id/ln1"
            android:background="#201C1C"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="1dp"
            android:layout_below="@id/button1"
            android:layout_marginTop="100dp" android:orientation="horizontal" android:layout_marginStart="20dp">
    </LinearLayout>
    <TextView
            android:id="@+id/tv1"
            android:layout_below="@id/button1"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập cách khác ?"
            android:textStyle="bold"
            android:layout_marginTop="90dp"
    />
    <LinearLayout
            android:id="@+id/ln2"
            android:background="#201C1C"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_below="@id/button1"
            android:layout_marginTop="100dp" android:orientation="horizontal">
    </LinearLayout>
    <Button
            android:id="@+id/button2"
            android:layout_below="@id/tv1"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng nhập mã QR"
    />
    <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:layout_alignParentBottom="true"
            android:background="#f0000"
            android:gravity="center"
            android:textColor="#3E54B1"
            android:textSize="13dp"
            android:text="@string/button_name"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"/>
</RelativeLayout>
